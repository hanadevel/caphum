%h1= t('index.units')


= link_to new_unit_path, class: 'btn btn-sm btn-primary' do
  %span.glyphicon.glyphicon-plus
  = t('.new')

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= Unit.human_attribute_name('name')
      %th= t('general.actions')
            
  %tbody
    - @units.each do |unit|
      %tr
        %td= unit.name
        %td
          = link_to t('general.show'), unit
          = link_to t('general.edit'), edit_unit_path(unit)
          = link_to t('general.destroy'), unit, :method => :delete, :data => { :confirm => t('general.are_you_sure') }
