= form_for @title do |f|
  - if @title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@title.errors.count, "error")} prohibited this title from being saved:"
      %ul
        - @title.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :unit_id
    = f.select :unit_id, options_for_select(Unit.all.map {|u| [u.name, u.id]})
  .actions
    = f.submit t('general.save')
