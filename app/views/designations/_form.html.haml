= form_for @designation do |f|
  - if @designation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@designation.errors.count, "error")} prohibited this designation from being saved:"
      %ul
        - @designation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person_id
    = f.select :person_id, options_for_select(Person.all.map {|p| [p.full_name, p.id]})
  .field
    = f.label :title_id
    = f.select :title_id, options_for_select(Title.all.map {|t| [t.name, t.id]})
  .field
    = f.label :start_date
    = f.text_field :start_date
  .field
    = f.label :end_date
    = f.text_field :end_date
  .actions
    = f.submit t('general.save')
