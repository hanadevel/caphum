%h1= t('index.people')

= link_to new_person_path, class: 'btn btn-sm btn-primary' do
  %span.glyphicon.glyphicon-plus
  = t('.new')

%table.table.table-striped.table-condensed
  %thead
    %tr
      %th= Person.human_attribute_name('last_name')
      %th= Person.human_attribute_name('surname')
      %th= Person.human_attribute_name('names')
      %th= Person.human_attribute_name('id_card')
      %th= t('general.actions')

  %tbody
    - @people.each do |person|
      %tr
        %td= person.last_name
        %td= person.surname
        %td= person.names
        %td= person.id_card
        %td
          = link_to t('general.show'), person
          = link_to t('general.edit'), edit_person_path(person)
          = link_to t('general.destroy'), person, :method => :delete, :data => { :confirm => t('general.are_you_sure') }
